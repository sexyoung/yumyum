{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://yumyumapi-gateway-production.up.railway.app/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://yumyumapi-gateway-production.up.railway.app/health"
    },
    {
      "source": "/ws/:path*",
      "destination": "https://yumyumgame-service-production.up.railway.app/ws/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
