{
  "name": "yumyum",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @yumyum/web",
    "dev:game": "npm run dev -w @yumyum/game-service",
    "dev": "npm run dev:web & npm run dev:game",
    "build": "npm run build --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "eslint . && npm run type-check",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf node_modules packages/*/node_modules services/*/node_modules shared/*/node_modules",
    "prepare": "husky",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prisma": "^6.19.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1"
  }
}
